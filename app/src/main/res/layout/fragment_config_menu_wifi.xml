<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:padding="@dimen/espacio_largo"
        tools:context=".secciones.menuconfiguraciones.ConfigMenuWifiFragment">

        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<LinearLayout
                    android:padding="@dimen/espacio_peque침o"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/cancel_dialog"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/cross_black" />

                </LinearLayout>-->


                <!--<com.cunoraz.gifview.library.GifView
                    android:id="@+id/img_wifi"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:contentDescription="@null" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wifi_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Velocidad de Conexi칩n"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/color_cancelar_botton"
                        android:textSize="@dimen/gen_dimen_txt_18"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/info"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_horizontal"
                        android:textColor="@color/blue_ya_ganaste"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/linearLayout2"
                        android:layout_gravity="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/wifi_mbps_title"
                            android:text="Mbps :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:gravity="start"
                            android:textColor="@color/color_cancelar_botton"
                            android:textSize="@dimen/gen_dimen_txt_16"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:id="@+id/wifi__mbps_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="2dp"
                            android:textSize="@dimen/gen_dimen_txt_16"
                            android:gravity="end"
                            android:fontFamily="@font/roboto"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:background="#90909090" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/linearLayout3"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/espacio_peque침o"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/wifi_type_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="2dp"
                            android:gravity="left"
                            android:text="Tipo :"
                            android:textColor="@color/color_cancelar_botton"
                            android:textSize="@dimen/gen_dimen_txt_16"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/wifi_type_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:gravity="right"
                            android:textSize="@dimen/gen_dimen_txt_16"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:background="#90909090" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/linearLayout4"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/espacio_peque침o"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/wifi_state_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="left"
                            android:text="Estado :"
                            android:textColor="@color/color_cancelar_botton"
                            android:textSize="@dimen/gen_dimen_txt_16"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/wifi__state_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textSize="@dimen/gen_dimen_txt_16"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"/>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
                        android:id="@+id/btnConfirmacion"
                        style="@style/ButtonStyle"
                        android:fontFamily="sans-serif-medium"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/espacio_mediano"
                        android:background="@drawable/selector_bg_modal_btn_negativo"
                        android:text="@string/txt_close"
                        android:textColor="@color/colorSaldoAzul"
                        android:textSize="@dimen/gen_dimen_txt_16" />


                    <!--<com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
                        android:id="@+id/btnConfirmacion"
                        style="@style/ButtonStyle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/selector_bg_modal_btn_positivo"
                        android:text="@string/aceptar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />-->

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</layout>