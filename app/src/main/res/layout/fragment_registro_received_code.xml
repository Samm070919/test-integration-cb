<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app"
        android:padding="16dp"
        tools:context="com.pagatodoholdings.posandroid.secciones.registro.registro4l.RegistroReceivedCodeFragment">

        <ImageView
            android:id="@+id/imageViewAna"
            android:layout_width="214dp"
            android:layout_height="182dp"
            android:scaleType="fitXY"
            android:src="@drawable/ilustracion_codigo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewInsertCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="@string/insert_code"
            android:textColor="@color/colorSaldoAzul"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewAna" />

        <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.InputPhoneCode
                android:id="@+id/inputPhoneCode"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textColor="#6B6B6B"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewInsertCode" />

        <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
            android:id="@+id/buttonUnicoCodeNotReceived"
            style="@style/FlatButtonStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/registro_resend_label"
            android:textColor="@color/colorSaldoAzul"
            android:textSize="@dimen/gen_dimen_txt_14"
            android:fontFamily="sans-serif"
            android:stateListAnimator="@null"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/inputPhoneCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
            android:id="@+id/buttonUnicoContinue"
            style="@style/ButtonContinueStyle"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/validate_code"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
