<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_rounded_bg"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="20dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_icon_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ya_icon_logo" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alias"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:textSize="14dp"
        android:textColor="@color/cardview_dark_background" />

    <EditText
        android:id="@+id/et_alias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_dark_background"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Día"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:textSize="14dp"
        android:textColor="@color/cardview_dark_background" />

    <EditText
        android:id="@+id/et_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="@color/cardview_dark_background"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recargar Cada"
            android:textColor="@color/colorGreyDark" />

        <Spinner
            android:id="@+id/spnPeriodicity2"
            style="@style/CalendarSpinnerCustom"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:popupBackground="@android:color/white"
            android:spinnerMode="dropdown" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:orientation="horizontal" />

    </LinearLayout>

    <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
        android:id="@+id/btn_guardar_servicio"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/tamaño_ancho_boton_standar"
        android:layout_height="@dimen/altura_boton"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:paddingRight="50dp"
        android:text="Añadir al Calendario"
        android:textAllCaps="false"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_close_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="No Gracias"
        android:textAllCaps="false"
        android:textColor="@color/color_cancelar_botton"
        android:textSize="16sp" />

</LinearLayout>