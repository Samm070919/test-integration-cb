<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls"
        android:background="@color/background_app"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:context="com.pagatodoholdings.posandroid.secciones.registro.registro4l.RegistroRecibePagosTarjetaFragment">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/imageGuideLine"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4" />

            <ImageView
                android:id="@+id/imageViewPagosTarjeta"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_acepta_pagos"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/imageGuideLine" />

            <TextView
                android:id="@+id/textViewRecibePagos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recibe_pagos_tarjeta_aumenta_ventas"
                android:textColor="@color/colorSaldoAzul"
                android:textSize="@dimen/gen_dimen_txt_20"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageViewPagosTarjeta" />


            <TextView
                android:id="@+id/textViewtodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/compra_qpos_todo"
                android:textColor="@color/texto_simple_modal"
                android:textSize="@dimen/gen_dimen_txt_16"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/margin_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewRecibePagos" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".12" />


            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/shape_blue_dot"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/textViewList0"
                app:layout_constraintTop_toTopOf="@id/textViewList0"
                app:layout_constraintBottom_toBottomOf="@id/textViewList0" />

            <TextView
                android:id="@+id/textViewList0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/compra_qpos"
                android:textAlignment="viewStart"
                android:textColor="#46606a"
                android:textSize="@dimen/gen_dimen_txt_16"
                app:layout_constraintBottom_toTopOf="@id/textViewList1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_first"
                app:layout_constraintTop_toBottomOf="@id/textViewtodo" />

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/shape_blue_dot"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/textViewList1"
                app:layout_constraintTop_toTopOf="@id/textViewList1"
                app:layout_constraintBottom_toBottomOf="@id/textViewList1" />

            <TextView
                android:id="@+id/textViewList1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/compra_qpos_tramites"
                android:textAlignment="viewStart"
                android:textColor="#46606a"
                android:textSize="@dimen/gen_dimen_txt_16"
                app:layout_constraintBottom_toBottomOf="@id/textViewList2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_first"
                app:layout_constraintTop_toBottomOf="@id/textViewList0" />

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/shape_blue_dot"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/textViewList2"
                app:layout_constraintTop_toTopOf="@id/textViewList2"
                app:layout_constraintBottom_toBottomOf="@id/textViewList2" />

            <TextView
                android:id="@+id/textViewList2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/compra_qpos_vincular"
                android:textAlignment="viewStart"
                android:textColor="#46606a"
                android:textSize="@dimen/gen_dimen_txt_16"
                app:layout_constraintBottom_toTopOf="@id/TextGuideLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_first"
                app:layout_constraintTop_toBottomOf="@id/textViewList1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/TextGuideLine"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".8" />


            <TextView
                android:id="@+id/textViewOtroMomento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/en_otro_momento"
                android:textColor="@color/colorSaldoAzul"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/TextGuideLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
                android:id="@+id/botonUnicoSiQuiero"
                style="@style/ButtonContinueStyle"
                android:text="@string/si_quiero"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/textViewOtroMomento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/EndGuideLine"
                app:layout_constraintEnd_toEndOf="parent" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/EndGuideLine"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
