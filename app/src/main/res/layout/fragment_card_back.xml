<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.pagatodoholdings.posandroid.secciones.registro.registro4l.cardfragment.CardBackFragment">

        <RelativeLayout
            android:id="@+id/rl_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/ic_card_back"
            android:padding="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv_cvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="68dp"
                    android:layout_marginRight="29dp"
                    android:background="@color/colorWhite"
                    android:minWidth="50dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="2dp"
                    android:text="···"
                    android:textColor="@color/card_cvv_color"
                    android:textSize="@dimen/header_text" />


            </LinearLayout>

        </RelativeLayout>


    </FrameLayout>
</layout>