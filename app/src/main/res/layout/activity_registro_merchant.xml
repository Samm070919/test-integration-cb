<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".secciones.registro.externo.RegistroMerchantActivity">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Convierte tu Negocio en un Centro de Pagos Electrónicos"
            android:textSize="24sp"
            android:textColor="@color/colorSaldoAzul"
            android:layout_marginTop="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textViewSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:text="Conviértete en premium y obtén más"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitulo" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewSubtitulo">

            <TableRow>
                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dp"/>

                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:text="Básico"/>

                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="Premium"/>
            </TableRow>

            <TableRow
                android:gravity="center">
                <TextView
                    android:layout_column="0"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:text="Sin costo mensual por dispositivo"
                    android:padding="4dp"/>
                <ImageView
                    android:layout_column="1"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="0.25"
                    android:layout_gravity="center"
                    android:src="@drawable/icono_exitoso"/>

                <ImageView

                    android:layout_column="2"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/icono_exitoso"/>
            </TableRow>

            <View
                android:layout_height="1dp"
                android:background="#72757575"/>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:text="Cobra y paga con QR"
                    android:padding="4dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="0.25"
                    android:layout_gravity="center"
                    android:src="@drawable/icono_exitoso"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="0.25"
                    android:layout_gravity="center"
                    android:src="@drawable/icono_exitoso"/>
            </TableRow>

            <View
                android:layout_height="1dp"
                android:background="#72757575"/>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:text="Recibe cualquier tipo de tarjeta"
                    android:padding="4dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="0.25"
                    android:layout_gravity="center"
                    android:src="@drawable/icono_exitoso"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="0.25"
                    android:layout_gravity="center"
                    android:src="@drawable/icono_exitoso"/>
            </TableRow>

            <View
                android:layout_height="1dp"
                android:background="#72757575"/>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:text="Premios por metas"
                    android:padding="4dp"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="0.25"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/icono_exitoso"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="0.25"
                    android:layout_gravity="center"
                    android:src="@drawable/icono_exitoso"/>
            </TableRow>

            <View
                android:layout_height="1dp"
                android:background="#72757575"/>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:text="Recibe comisiones por pago de serviciones y recargas"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="0.25"
                    android:layout_gravity="center"
                    android:src="@drawable/icono_exitoso"/>
            </TableRow>

        </TableLayout>

        <CheckBox
            android:id="@+id/check_condiciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:text="@string/registro_cb_t_c_aviso"
            android:textColor="@color/colorGreyDark"
            app:layout_constraintBottom_toTopOf="@id/tv_otro_momento"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_otro_momento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/en_otro_momento"
            android:textColor="@color/colorSaldoAzul"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@id/btn_merch_continuar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
            android:id="@+id/btn_merch_continuar"
            style="@style/ButtonContinueStyle"
            android:text="Quiero Premium"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
