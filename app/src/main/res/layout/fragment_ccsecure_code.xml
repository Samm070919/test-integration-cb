<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        tools:context="com.pagatodoholdings.posandroid.secciones.registro.registro4l.cardfragment.CCSecureCodeFragment">

        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:elevation="0dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="0dp">

            <LinearLayout
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    style="@style/CardLabel"
                    android:text="@string/card_cvv" />

                <com.pagatodoholdings.posandroid.utils.cardutils.CreditCardEditText
                    android:id="@+id/et_cvv"
                    style="@style/CardInput"
                    android:hint="@string/card_cvv"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColorHint="@color/colorWhite"
                    android:backgroundTint="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </FrameLayout>

</layout>