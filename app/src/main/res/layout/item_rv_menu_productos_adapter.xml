<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_mis_datos"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/espacio_pequeño"
        android:layout_marginTop="@dimen/espacio_pequeño"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="@dimen/espacio_pequeño"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/menu_item_mis_datos"

            android:layout_width="@dimen/tamaño_bg_opcion_w"
            android:layout_height="@dimen/tamaño_bg_opcion_h"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_marginTop="@dimen/margen_pequeño"
                    android:layout_marginLeft="@dimen/margen_pequeño"
                    android:layout_marginRight="@dimen/margen_pequeño"
                    android:layout_marginBottom="@dimen/margen_pequeño"
                    android:adjustViewBounds="true"
                    android:id="@+id/icono_producto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_horizontal|center_vertical"
                    tools:src="@tools:sample/avatars" />

            </LinearLayout>

            <TextView
                android:id="@+id/nombre_producto"
                android:layout_width="match_parent"
                android:layout_weight=".4"
                android:layout_height="0dp"
                android:maxLines="2"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                tools:text="Texto mediano \n Prueba correcta"
                android:text="@string/menu_item_mis_datos"
                android:gravity="center_horizontal"
                android:textColor="@color/colorGreyFormulario"
                android:textSize="@dimen/gen_dimen_txt_12"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
