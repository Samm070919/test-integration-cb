<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abg_azul_degradado"
        >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_centerInParent="true"
                android:transitionName="logo"
                android:layout_width="200dp"
                android:layout_marginTop="160dp"
                android:contentDescription="@string/gen_desc"
                android:layout_height="200dp"
                android:background="@drawable/ic_logo_splash"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:text="@string/title_splash2"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/iv_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/txtVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:layout_marginTop="60dp"
                android:text="Lorem impsin"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorGrey"
                android:visibility="gone"
                android:textSize="@dimen/registro_externo_item_margin_bottom"
                app:layout_constraintTop_toBottomOf="@id/iv_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
