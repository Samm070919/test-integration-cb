<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/fragment_ayuda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/background_app"
        tools:context=".secciones.menuconfiguraciones.ConfigMenuAyudaFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/espacio_mediano"
                android:layout_marginEnd="@dimen/espacio_mediano"
                android:layout_marginTop="@dimen/espacio_xlargo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/cross_draw" />

                <TextView
                    android:id="@+id/TextViewAyudaInfo"
                    style="@style/TextStyleDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/menu_item_ayuda"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/tam_txt_grande"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/TextViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ayuda_title"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_18"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/espacio_xlargo"
                android:layout_marginStart="@dimen/espacio_mediano"
                android:layout_marginEnd="@dimen/espacio_mediano"
                android:layout_below="@+id/relativeLayout2"/>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:overScrollMode="ifContentScrolls"
                android:layout_marginStart="@dimen/espacio_mediano"
                android:layout_marginEnd="@dimen/espacio_mediano"
                android:layout_marginTop="@dimen/espacio_xxlargo"
                android:layout_below="@+id/TextViewTitle"
                android:layout_above="@+id/ll_menu">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/TextViewCuestion1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ayuda_cuestion1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/gen_dimen_txt_14"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/TextViewCuestion1Answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="@string/ayuda_cuestion1_answer"
                        android:textColor="@color/coloproducttext"
                        android:textSize="@dimen/gen_dimen_txt_16"
                        android:fontFamily="sans-serif"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/TextViewCuestion2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/espacio_xlargo"
                        android:text="@string/ayuda_cuestion2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/gen_dimen_txt_14"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/TextViewCuestion2Answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="@string/ayuda_cuestion2_answer"
                        android:textColor="@color/coloproducttext"
                        android:textSize="@dimen/gen_dimen_txt_16"
                        android:fontFamily="sans-serif"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/TextViewCuestion3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/espacio_xlargo"
                        android:text="@string/ayuda_cuestion3"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/gen_dimen_txt_14"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/TextViewCuestion3Answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="@string/ayuda_cuestion3_answer"
                        android:textColor="@color/coloproducttext"
                        android:textSize="@dimen/gen_dimen_txt_16"
                        android:fontFamily="sans-serif"
                        android:visibility="gone"/>

                    <!-- Pregunta Respuesta 4 -->

                    <TextView
                        android:id="@+id/TextViewCuestion4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/espacio_xlargo"
                        android:text="@string/ayuda_cuestion4"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/gen_dimen_txt_14"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/TextViewCuestion4Answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="15dp"
                        android:text="@string/ayuda_cuestion4_answer"
                        android:textColor="@color/coloproducttext"
                        android:textSize="@dimen/gen_dimen_txt_16"
                        android:fontFamily="sans-serif"
                        android:visibility="gone"/>



                    <!-- Pregunta Respuesta 5 -->

                    <TextView
                        android:id="@+id/TextViewCuestion5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/espacio_xlargo"
                        android:text="@string/ayuda_cuestion5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/gen_dimen_txt_14"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/TextViewCuestion5Answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="15dp"
                        android:text="@string/ayuda_cuestion5_answer"
                        android:textColor="@color/coloproducttext"
                        android:textSize="@dimen/gen_dimen_txt_16"
                        android:fontFamily="sans-serif"
                        android:visibility="gone"/>




                    <!-- Pregunta Respuesta 6 -->

                    <TextView
                        android:id="@+id/TextViewCuestion6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/espacio_xlargo"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/gen_dimen_txt_14"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/TextViewCuestion6Answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="15dp"
                        android:text="@string/ayuda_cuestion6_answer"
                        android:textColor="@color/coloproducttext"
                        android:textSize="@dimen/gen_dimen_txt_16"
                        android:fontFamily="sans-serif"
                        android:visibility="gone"/>




                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/espacio_mediano"
                android:layout_marginEnd="@dimen/espacio_mediano"
                android:layout_marginTop="@dimen/espacio_mediano"
                android:layout_marginBottom="@dimen/espacio_xlargo"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_correo"
                    style="@style/CardViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/espacio_pequeño"
                    android:layout_marginTop="@dimen/espacio_pequeño"
                    android:layout_marginBottom="@dimen/espacio_pequeño">

                    <LinearLayout
                        android:id="@+id/menu_item_correo"
                        android:layout_width="@dimen/tamaño_bg_opcion"
                        android:layout_height="@dimen/tamaño_bg_opcion"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_icon_correo"
                            style="@style/configuracionItemImagenes"
                            android:layout_width="@dimen/tamaño_ic_opcion"
                            android:layout_height="@dimen/tamaño_ic_opcion"
                            android:layout_gravity="center"
                            android:src="@drawable/icono_correo" />

                        <TextView
                            android:id="@+id/tv_label_correo"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="@string/title_correo"
                            android:textAlignment="center"
                            android:textColor="@color/colorGreyFormulario"
                            android:textSize="@dimen/gen_dimen_txt_12" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_llamar"
                    style="@style/CardViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/espacio_pequeño"
                    android:layout_marginBottom="@dimen/espacio_pequeño"
                    android:layout_marginStart="@dimen/espacio_largo"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/menu_item_mis_datos"
                        android:layout_width="@dimen/tamaño_bg_opcion"
                        android:layout_height="@dimen/tamaño_bg_opcion"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_icon_llamar"
                            style="@style/configuracionItemImagenes"
                            android:layout_width="@dimen/tamaño_ic_opcion"
                            android:layout_height="@dimen/tamaño_ic_opcion"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_img_contactanos" />

                        <TextView
                            android:id="@+id/tv_label_llamar"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="@string/title_llamar"
                            android:textAlignment="center"
                            android:textColor="@color/colorGreyFormulario"
                            android:textSize="@dimen/gen_dimen_txt_12" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_whats"
                    style="@style/CardViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/espacio_pequeño"
                    android:layout_marginTop="@dimen/espacio_pequeño"
                    android:layout_marginBottom="@dimen/espacio_pequeño"
                    android:layout_marginStart="@dimen/espacio_largo"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/menu_item_whats"
                        android:layout_width="@dimen/tamaño_bg_opcion"
                        android:layout_height="@dimen/tamaño_bg_opcion"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_icon_chat"
                            style="@style/configuracionItemImagenes"
                            android:layout_width="@dimen/tamaño_ic_opcion"
                            android:layout_height="@dimen/tamaño_ic_opcion"
                            android:layout_gravity="center"
                            android:src="@drawable/icono_whatsapp" />

                        <TextView
                            android:id="@+id/tv_label_whats"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="@string/title_whats"
                            android:textAlignment="center"
                            android:textColor="@color/colorGreyFormulario"
                            android:textSize="@dimen/gen_dimen_txt_12" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>
</layout>
