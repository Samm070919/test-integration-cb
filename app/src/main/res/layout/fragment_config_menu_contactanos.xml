<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minWidth="400dp"

        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="12dp"
        >

        <TextView
            android:id="@+id/titulo_contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/blueDark"
            android:maxLines="2"
            android:textAlignment="center"
            android:padding="4dp"
            android:text="ContÃ¡ctanos"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewContacto"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/gen_dimen_cardview_altura"
                android:layout_gravity="center_horizontal"
                card_view:cardElevation="0dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <ImageView
                        android:id="@+id/img_contacto"
                        android:layout_width="@dimen/gen_dimen_img_cardview_ancho"
                        android:layout_height="@dimen/gen_dimen_img_cardview_altura"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/gen_desc"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_img_contactanos" />

                    <TextView
                        android:id="@+id/txt_contacto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:text="01800092983"
                        android:textColor="?attr/blueDark"
                        android:textSize="13dp"
                        android:textStyle="bold" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/gen_dimen_cardview_altura"
                android:layout_gravity="center_horizontal"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="0dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="@dimen/gen_dimen_img_cardview_ancho"
                        android:layout_height="@dimen/gen_dimen_img_cardview_altura"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/gen_desc"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_img_mail2" />

                    <TextView
                        android:id="@+id/txt_contacto_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:text="?attr/blueDark"
                        android:textColor="?attr/blueDark"
                        android:textSize="13dp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewWeb"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/gen_dimen_cardview_altura"
                android:layout_gravity="center_horizontal"
                card_view:cardElevation="0dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_web"
                        android:layout_width="@dimen/gen_dimen_img_cardview_ancho"
                        android:layout_height="@dimen/gen_dimen_img_cardview_altura"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/gen_desc"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_img_web4" />




                    <TextView
                        android:id="@+id/txt_contacto_web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:maxLines="2"
                        android:padding="4dp"
                        android:text="ww.fullcarga.com.ar"
                        android:textColor="?attr/blueDark"
                        android:textSize="13dp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</layout>
