<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_marginTop="@dimen/espacio_pequeño"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/edit_contenido"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:maxLength="20"
        android:textColor="@android:color/transparent"
        android:textColorHint="@color/texto_simple_modal"
        android:textIsSelectable="false"
        android:textSize="@dimen/gen_dimen_txt_16"
        android:theme="@style/EditTextPassword"
        android:backgroundTint="@color/grey_lines"/>

    <TextView
        android:id="@+id/text_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/edit_contenido"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textColor="@color/texto_simple_modal"
        android:textSize="@dimen/gen_dimen_txt_16"
        tools:text="Referencia Única" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/edit_contenido"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_asteriscos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txt_digit_1"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="1" />

            <TextView
                android:id="@+id/txt_digit_2"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="2" />

            <TextView
                android:id="@+id/txt_digit_3"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="1" />


            <TextView
                android:id="@+id/txt_digit_4"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="2" />

            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorGreyDark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txt_digit_5"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="3" />

            <TextView
                android:id="@+id/txt_digit_6"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="4" />


            <TextView
                android:id="@+id/txt_digit_7"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="1" />

            <TextView
                android:id="@+id/txt_digit_8"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="2" />


            <View
                android:id="@+id/view2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorGreyDark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txt_digit_9"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="3" />


            <TextView
                android:id="@+id/txt_digit_10"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="4" />

            <TextView
                android:id="@+id/txt_digit_11"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="3" />


            <TextView
                android:id="@+id/txt_digit_12"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="4" />

            <View
                android:id="@+id/view3"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorGreyDark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txt_digit_13"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="3" />


            <TextView
                android:id="@+id/txt_digit_14"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="4" />

            <TextView
                android:id="@+id/txt_digit_15"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="3" />


            <TextView
                android:id="@+id/txt_digit_16"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="4" />

            <View
                android:id="@+id/view4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorGreyDark"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txt_digit_17"
                android:layout_width="10dp"
