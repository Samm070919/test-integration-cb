                android:gravity="center"
                android:textColor="@color/coloproducttext"
                android:textSize="@dimen/gen_dimen_txt_16"
                tools:text="3" />


            <TextView
                android:id="@+id/txt_digit_18"
                android:layout_width="10dp"
