<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/fragment_configuracion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app"
        tools:context="com.pagatodoholdings.posandroid.secciones.menuconfiguraciones.ConfigMenuConfiguracionFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rlToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/ivClose"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/espacio_mediano"
                android:src="@drawable/ic_icono_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextStyleDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_item_configuracion"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/tam_txt_grande"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlToolbar"
            android:layout_marginStart="@dimen/espacio_mediano"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="@dimen/espacio_mediano"
            android:layout_marginBottom="@dimen/espacio_xxlargo"
            android:paddingBottom="@dimen/espacio_pequeño"
            app:cardCornerRadius="@dimen/curvatura_mediana_cv"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/espacio_pequeño"
                android:layout_marginBottom="@dimen/espacio_xxlargo"
                android:orientation="vertical"
                android:paddingStart="@dimen/espacio_largo"
                android:paddingEnd="@dimen/espacio_largo">

                <Button
                    android:id="@+id/btn_vincular_tarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:drawableEnd="@drawable/flecha_azul_derecha"
                    android:drawablePadding="30dp"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center_vertical"
                    android:text="@string/link_card_reader"
                    android:textAllCaps="false"
                    android:textColor="#46606a"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="#90909090" />

                <Button
                    android:id="@+id/btn_bloqueo_automatico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:drawableEnd="@drawable/flecha_azul_derecha"
                    android:drawablePadding="30dp"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center_vertical"
                    android:text="@string/actividad_sesion"
                    android:textAllCaps="false"
                    android:textColor="#46606a"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="#90909090" />

                <Button
                    android:id="@+id/btn_velocidad_conexion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:drawableEnd="@drawable/flecha_azul_derecha"
                    android:drawablePadding="30dp"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center_vertical"
                    android:text="@string/config_menu_configuracion_velocidad_conexion"
                    android:textAllCaps="false"
                    android:textColor="#46606a"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="#90909090" />

                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:drawableEnd="@drawable/flecha_azul_derecha"
                    android:drawablePadding="30dp"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center_vertical"
                    android:text="@string/menu_title_ajustes_cambio_contraseña"
                    android:textAllCaps="false"
                    android:textColor="#46606a"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:background="#90909090" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>