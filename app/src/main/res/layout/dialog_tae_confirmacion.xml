<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_rounded_bg"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_icon_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ya_icon_logo"
            android:scaleType="centerCrop"
            android:contentDescription="Icon"
            android:background="@color/colorWhite"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/params"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margen_mediano"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">

        <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
            android:id="@+id/btn_regresar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/altura_boton"
            android:background="@drawable/bg_button_cancel"
            android:text="@string/txt_back"
            android:textAllCaps="false"
            android:textColor="@color/color_cancelar_botton"
            android:textSize="16sp"
            android:layout_weight=".2"/>

        <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
            android:id="@+id/btn_recargar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:text="@string/txt_recharge"
            style="@style/ButtonStyle"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            android:background="@drawable/bg_button_cobrar_wallet"/>

    </LinearLayout>

</LinearLayout>