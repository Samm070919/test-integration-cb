<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_signo_dinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="@color/colorPreciosEscaneo"
        android:textSize="12sp"
        android:paddingBottom="4dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_total_entero"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_total_entero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorPreciosEscaneo"
        android:textSize="22sp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@id/tv_signo_dinero"
        app:layout_constraintEnd_toStartOf="@+id/tv_total_decimales"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/tv_signo_dinero" />

    <TextView
        android:id="@+id/tv_total_decimales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".00"
        android:textColor="@color/colorPreciosEscaneo"
        android:textSize="10sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@id/tv_total_entero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/tv_total_entero"
        app:layout_constraintTop_toTopOf="@id/tv_total_entero"
        app:layout_constraintVertical_bias="0.19" />

</androidx.constraintlayout.widget.ConstraintLayout>