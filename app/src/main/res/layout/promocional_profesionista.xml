<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        tools:context="com.pagatodoholdings.posandroid.secciones.inicio.InicioActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
                        android:id="@+id/btn_registrar_profesionista"
                        style="@style/Aceptar_ButtonStyle"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:layout_marginTop="@dimen/margin_exit_fragment"
                        android:layout_marginBottom="@dimen/status_bar_altura"
                        android:text="@string/btn_registrar_profesionista"
                        android:textSize="@dimen/gen_dimen_txt_16"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sin_dongle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <com.pagatodoholdings.posandroid.componentesvista.controlespersonalizados.BotonClickUnico
                            android:visibility="visible"
                            android:id="@+id/btn_vincular_dongle"
                            style="@style/Aceptar_ButtonStyle"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingEnd="16dp"
                            android:paddingStart="16dp"
                            android:text="@string/btn_vincular_dongle"
                            android:textSize="@dimen/gen_dimen_txt_16"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aun_sin_dongle"
                        android:layout_marginTop="@dimen/gen_dimen_txt_16"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
