<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:animateLayoutChanges="true"
    android:layout_marginBottom="@dimen/espacio_pequeño"
    android:layout_marginTop="@dimen/espacio_pequeño"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/edit_contenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextPassword"
        android:maxLength="6"
        android:textIsSelectable="false"
        android:textSize="@dimen/gen_dimen_txt_16"
        android:textColorHint="@color/texto_simple_modal"
        android:hint="@string/contrasena"
        android:textColor="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:textCursorDrawable="@android:color/transparent"/>

    <CheckBox
        android:id="@+id/iv_icono_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/espacio_pequeño"
        android:visibility="visible"
        android:button="@drawable/eye_selector"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/layout_asteriscos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingEnd="@dimen/margen_edit_contraseña"
        android:layout_toStartOf="@+id/iv_icono_visible"
        android:layout_alignBottom="@+id/edit_contenido">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_digit_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="*"
                android:textSize="@dimen/gen_dimen_txt_24"
                android:textColor="@color/coloproducttext"
                android:layout_centerHorizontal="true"
                android:layout_toStartOf="@+id/division1"/>

            <View
                android:id="@+id/division1"
                android:layout_width="@dimen/ancho_division_asterisco_contraseña"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/colorGrey" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_digit_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="*"
                android:textSize="@dimen/gen_dimen_txt_24"
                android:textColor="@color/coloproducttext"
                android:layout_toStartOf="@+id/division2"/>

            <View
                android:id="@+id/division2"
                android:layout_width="@dimen/ancho_division_asterisco_contraseña"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_digit_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="*"
                android:textSize="@dimen/gen_dimen_txt_24"
                android:textColor="@color/coloproducttext"
                android:layout_toStartOf="@+id/division3"/>

            <View
                android:id="@+id/division3"
                android:layout_width="@dimen/ancho_division_asterisco_contraseña"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_digit_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="*"
                android:textSize="@dimen/gen_dimen_txt_24"
                android:textColor="@color/coloproducttext"
                android:layout_toStartOf="@+id/division4"/>

            <View
                android:id="@+id/division4"
                android:layout_width="@dimen/ancho_division_asterisco_contraseña"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_digit_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="*"
                android:textSize="@dimen/gen_dimen_txt_24"
                android:textColor="@color/coloproducttext"
                android:layout_toStartOf="@+id/division5"/>

            <View
                android:id="@+id/division5"
                android:layout_width="@dimen/ancho_division_asterisco_contraseña"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_digit_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="*"
                android:textSize="@dimen/gen_dimen_txt_24"
                android:textColor="@color/coloproducttext"
                android:layout_toStartOf="@+id/division6"/>

            <View
                android:id="@+id/division6"
                android:layout_width="@dimen/ancho_division_asterisco_contraseña"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/et_contenido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:elevation="8dp"
        android:inputType="numberPassword"
        android:longClickable="false"
        android:maxLength="6"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>